<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Screen2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_bgr2"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bgr_main" />

            <ImageView
                android:id="@+id/bgr_signup"
                android:layout_width="660dp"
                android:layout_height="428dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bgr_signup" />

            <EditText
                android:id="@+id/et_lname"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:hint="Last Name"
                app:layout_constraintBottom_toTopOf="@+id/et_username"
                app:layout_constraintRight_toRightOf="@+id/et_username" />

            <EditText
                android:id="@+id/et_fname"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:hint="First Name"
                app:layout_constraintBottom_toTopOf="@+id/et_username"
                app:layout_constraintLeft_toLeftOf="@+id/et_username" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="60dp"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:hint="Username"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:hint="Email"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_username"
                app:layout_constraintVertical_bias="0.05" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_email"
                app:layout_constraintVertical_bias="0.05" />

            <EditText
                android:id="@+id/et_cf_pass"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_password"
                app:layout_constraintVertical_bias="0.05" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="246dp"
                android:layout_height="54dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bgr_signup"
                app:layout_constraintVertical_bias="0.005"
                app:srcCompat="@drawable/txt_register2x" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_entersigup"
                android:layout_width="235dp"
                android:layout_height="49dp"
                android:background="@drawable/btn_border1"
                android:onClick="signUpClicked"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="@+id/et_cf_pass"
                app:layout_constraintStart_toStartOf="@+id/et_cf_pass"
                app:layout_constraintTop_toBottomOf="@+id/et_cf_pass" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:background="@drawable/btn_back"
                android:onClick="backClick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>





